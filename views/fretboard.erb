<div id="fretboard">
  <div class="frets">
    <% 21.times do |x| %>
    <div class="fret">
      <span><%= x+1 %></span>
    </div>
    <% end %>
  </div>
<% @fretboard.each_with_index do |s| %>
<div class="string">
  <% s.each do |n| %>
  <div class="note">
    <span><%= n %></span>
  </div>
  <% end %>
</div>
<% end %>
</div>